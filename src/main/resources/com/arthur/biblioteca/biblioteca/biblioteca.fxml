<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.arthur.biblioteca.biblioteca.view.BibliotecaControllerFX">
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <Label text="--- SISTEMA DE BIBLIOTECA DO ALDA ---" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <VBox spacing="10" maxWidth="300">
        <Button fx:id="btnCadastrarLivro" text="Cadastrar Livros" maxWidth="Infinity"/>
        <Button fx:id="btnListarLivros" text="Listar Livros" maxWidth="Infinity"/>
        <Button fx:id="btnEmprestarLivro" text="Emprestar Livros" maxWidth="Infinity"/>
        <Button fx:id="btnListarEmprestimos" text="Listar Empréstimos" maxWidth="Infinity"/>
        <Button fx:id="btnDevolverLivro" text="Devolver Livro" maxWidth="Infinity"/>
        <Button fx:id="btnSair" text="Sair" maxWidth="Infinity"/>
    </VBox>

    <Label text="Saída:" style="-fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>
    <ScrollPane prefHeight="300" prefWidth="600" fitToWidth="true" fitToHeight="true">
        <content>
            <TextArea fx:id="textAreaOutput" editable="false" wrapText="true" />
        </content>
    </ScrollPane>

</VBox>
